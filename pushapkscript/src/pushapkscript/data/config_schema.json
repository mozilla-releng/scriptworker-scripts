{
    "title": "pushapkscript config schema",
    "type": "object",
    "required": [
        "jarsigner_key_store",
        "taskcluster_scope_prefixes",
        "products"
    ],
    "properties": {
        "jarsigner_key_store": {
            "type": "string"
        },
        "taskcluster_scope_prefixes": {
            "type": "array",
            "minItems": 1,
            "uniqueItems": true,
            "items": {
                "type": "string"
            }
        },
        "do_not_contact_server": {
            "type": "boolean"
        },
        "products": {
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "object",
                "additionalProperties": false,
                "required": [
                    "product_names"
                ],
                "properties": {
                    "product_names": {
                        "type": "array",
                        "minItems": 1,
                        "uniqueItems": true,
                        "items": {
                            "type": "string"
                        }
                    },
                    "digest_algorithm": {
                        "type": "string"
                    },
                    "skip_check_ordered_version_codes": {
                        "type": "boolean"
                    },
                    "skip_check_multiple_locales": {
                        "type": "boolean"
                    },
                    "skip_check_same_locales": {
                        "type": "boolean"
                    },
                    "skip_checks_fennec": {
                        "type": "boolean"
                    },
                    "skip_check_signature": {
                        "type": "boolean"
                    },
                    "override_channel_model": {
                        "type": "string",
                        "enum": [
                            "single_google_app",
                            "choose_google_app_with_scope"
                        ]
                    },
                    "app": {
                        "type": "object",
                        "additionalProperties": false,
                        "required": [
                            "service_account",
                            "credentials_file",
                            "package_names"
                        ],
                        "properties": {
                            "certificate_alias": {
                                "type": "string"
                            },
                            "service_account": {
                                "type": "string"
                            },
                            "credentials_file": {
                                "type": "string"
                            },
                            "package_names": {
                                "type": "array",
                                "minItems": 1,
                                "uniqueItems": true,
                                "items": {
                                    "type": "string"
                                }
                            }
                        }
                    },
                    "apps": {
                        "type": "object",
                        "additionalProperties": {
                            "type": "object",
                            "required": [
                                "package_names"
                            ],
                            "properties": {
                                "certificate_alias": {
                                    "type": "string"
                                },
                                "service_account": {
                                    "type": "string"
                                },
                                "credentials_file": {
                                    "type": "string"
                                },
                                "package_names": {
                                    "type": "array",
                                    "minItems": 1,
                                    "uniqueItems": true,
                                    "items": {
                                        "type": "string"
                                    }
                                },
                                "amazon": {
                                    "type": "object",
                                    "required": [
                                        "client_id",
                                        "client_secret"
                                    ],
                                    "additionalProperties": false,
                                    "properties": {
                                        "client_id": {
                                            "type": "string"
                                        },
                                        "client_secret": {
                                            "type": "string"
                                        }
                                    }
                                },
                                "google": {
                                    "type": "object",
                                    "required": [
                                        "default_track",
                                        "service_account",
                                        "credentials_file"
                                    ],
                                    "additionalProperties": false,
                                    "properties": {
                                        "default_track": {
                                            "type": "string"
                                        },
                                        "service_account": {
                                            "type": "string"
                                        },
                                        "credentials_file": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}

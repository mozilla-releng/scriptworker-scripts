        "taskcluster_scope_prefixes",
        "autograph_configs"
    ],
    "properties": {
        "taskcluster_scope_prefixes": {
            "type": "array",
            "minItems": 1,
            "uniqueItems": true,
            "items": {
                "type": "string"
            }
        },
        "autograph_configs": {
            "type": "string"
        },
        "signtool": {
            "type": "string"
        },
        "token_duration_seconds": {
            "type": "number"
        },
        "dmg": {
            "type": "string"
        },
        "hfsplus": {
            "type": "string"
        },
        "gpg_pubkey": {
            "type": "string"
        },
        "widevine_cert": {
            "type": "string"
        },
        "authenticode_cert": {
            "type": "string"
        },
        "authenticode_cross_cert": {
            "type": "string"
        },
        "authenticode_timestamp_style": {
            "type": "string"
        },
        "authenticode_timestamp_url": {
            "type": "string"
        },
        "authenticode_url": {
            "type": "string"
        },
        "mar_channels": {
            "type": "string"
        }
    }
}

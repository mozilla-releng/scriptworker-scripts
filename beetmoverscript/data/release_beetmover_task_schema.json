{
    "title": "Taskcluster beetmover task release schema",
    "type": "object",
    "properties": {
        "dependencies": {
            "type": "array",
            "minItems": 1,
            "uniqueItems": true,
            "items": {
                "type": "string"
            }
        },
        "payload": {
            "type": "object",
            "properties": {
                "product": {
                    "type": "string"
                },
                "build_number": {
                    "type": "number"
                },
                "version": {
                    "type": "string"
                },
                "maxRunTime" : {
                    "type" : "number"
                },
                "upstreamArtifacts": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "taskType": {
                                "type": "string"
                            },
                            "locale": {
                                "type": "string"
                            },
                            "taskId": {
                                "type": "string"
                            },
                            "paths": {
                                "type": "array",
                                "minItems": 1,
                                "uniqueItems": true,
                                "items": {
                                    "type": "string"
                                }
                            },
                            "zipExtract": {
                                "type": "boolean"
                            }
                        },
                        "required": ["taskId", "taskType", "paths"]
                    },
                    "minItems": 0,
                    "uniqueItems": true
                }
            },
            "required": ["product", "build_number", "version"],
            "optional": ["upstreamArtifacts", "maxRunTime"]

        }
    },
    "required": ["payload", "dependencies"]
}
